<h1>Add a New Book</h1>
<form action="/books" method="POST">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="title" />
    <label for="author">Author</label>
    <input type="text" class="form-control" id="author" name="author" />
    <label for="img_Url">Book Image Url</label>
    <input type="url" class="form-control" id="img_Url" name="img_Url" />
    <label for="rating">Book Rating</label>
    <input type="text" class="form-control" id="rating" name="rating" />
    
</div>
  <% categories.forEach(category=> { %>
  <input
    type="checkbox"
    id="<%= category.book_type %>"
    name="categories"
    value="<%= category.id %>"
  />

  <input
    type="checkbox"
    id="<%= category.genre %>"
    name="categories"
    value="<%= category.id %>"
  />
 <label for="<%= category.book_type %>"><%= category.book_type %></label><br />
 <label for="<%= category.genre %>"><%= category.genre %></label><br />
 <% })%>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>